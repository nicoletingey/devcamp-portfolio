<% if logged_in?(:site_admin) %>
  <p class="blog-post-meta">
    <%= link_to blog.status, toggle_status_blog_path(blog), class: "fa fa-pencil-square-o" %>/
    <%= link_to '', edit_blog_path(blog), class: 'fa fa-pencil' %>/
    <%= link_to '', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash' %>
  </p>
<% end %>